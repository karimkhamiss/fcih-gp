<CustLabel@Label>:
    color: 1, 0, 0, 1
<CusTxt@TextInput>:
    background_normal:''
    background_color:1, 1, 1,1
<SUBoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: .98, .98, .98,1
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,.3
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1
            pos_hint:{'y':-.2}
            Image:
                source:'..\..\\resources\\ui\\logo.png'
                size_hint:[1,1]
    FloatLayout:
        size_hint: 1,.7
        background_normal:''
        background_color:0,0,0,1

        CusTxt:
            hint_text: "First Name"
            font_size: 13
            pos_hint: {"center_x": 0.5, "top": 1}
        CusTxt:
            hint_text: "Last Name"
            font_size: 13
            pos_hint: {"center_x": .5, "top": .88}
        CheckBox:
            group: "gender"
            value: root.male
            pos_hint: {"center_x": 0.25, "top": .76}
            size_hint: .1, .09
        CustLabel:
            text: "Male"
            color: .45,.45,.45,1
            pos_hint: {"center_x": 0.37, "top": .76}
            size_hint: .3, .09
        CheckBox:
            group: "gender"
            value: root.female
            pos_hint: {"center_x": 0.55, "top": .76}
            size_hint: .1, .09
        CustLabel:
            text: "Female"
            color: .45,.45,.45,1
            pos_hint: {"center_x": 0.69, "top": .76}
            size_hint: .3, .09
        CusTxt:
            hint_text: "Birthdate"
            font_size: 13
            pos_hint: {"center_x": .5, "top": .64}
        CusTxt:
            hint_text: "Email"
            font_size: 13
            pos_hint: {"center_x": .5, "top": .52}

        CusTxt:
            hint_text: "Password"
            password: True
            font_size: 13
            pos_hint: {"center_x": .5, "top": .40}
        Button:
            text: "Sign Up"
            pos_hint: {"center_x": .5, "top": .28}
            size_hint: .3, .1
            background_normal:''
            background_color:0.2, 0.58, 0.992,1
        Button:
            text: "Don't have account"
            pos_hint: {"center_x": .5, "center_y": 0.046}
            size_hint:[1,None]
            height: 32
            background_normal:''
            background_color:0.2, 0.58, 0.992,1
            foreground_color:0.56,0.75,0.94
            on_release:app.root.current = "login"
