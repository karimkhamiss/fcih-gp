<CustLabel@Label>:
    color: 1, 0, 0, 1
<CusTxt@TextInput>:
    background_normal:''
    background_color:1, 1, 1,1
<SUBoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: .98, .98, .98,1
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout: #layout for logo
        size_hint: 1,.3
        Label:
            text:'Logo is here'
            color :0.2, 0.58, 0.992,1
            font_size:30
           # pos_hint: {'x': .1, 'y': .2}
    FloatLayout:
        size_hint: 1,.7
        background_normal:''
        background_color:0,0,0,1
        CusTxt:
            text: "First Name"
            pos_hint: {"x": 0.18, "top": 1}
            size_hint: .3, .09
        CusTxt:
            text: "Last Name"
            pos_hint: {"x": .52, "top": 1}
            size_hint: .3, .09
        CustLabel:
            text: "Gender"
            color: 0, 0, 0, 1
            pos_hint: {"x": 0.06, "top": .9}
            size_hint: .3, .09
        CheckBox:
            group: "gender"
            value: root.male
            pos_hint: {"x": 0.27, "top": .9}
            size_hint: .1, .09
        CustLabel:
            text: "Male"
            color: 0, 0, 0, 1
            pos_hint: {"x": 0.3, "top": .9}
            size_hint: .3, .09
        CheckBox:
            group: "gender"
            value: root.female
            pos_hint: {"x": 0.59, "top": .9}
            size_hint: .1, .09
        CustLabel:
            text: "Female"
            color: 0, 0, 0, 1
            pos_hint: {"x": 0.6, "top": .9}
            size_hint: .3, .09
        CusTxt:
            text: "Birthdate"
            pos_hint: {"x": .18, "top": .8}
            size_hint: .64, .09
        CusTxt:
            text: "Email"
            pos_hint: {"x": 0.18, "top": .7}
            size_hint: .64, .1

        CusTxt:
            text: "Password"
            pos_hint: {"x": 0.18, "top": .59}
            size_hint: .64, .1
        Button:
            text: "Sign Up"
            pos_hint: {"center_x": .5, "center_y": .4}
            size_hint: .3, .1
            background_normal:''
            background_color:0.2, 0.58, 0.992,1
        Button:
            size_hint: 1, .1
            background_normal:''
            background_color:0.2, 0.58, 0.992,1
            foreground_color:0.56,0.75,0.94
            text: "Already have account"
            pos_hint: {"left": 1, "bottom": 0}