#:kivy 1.8.0
<CircularButton>:
    size: (min(self.width,self.height),min(self.width,self.height)) # force circle
    canvas:
        Color:
            rgba: ((1,1,1,1) if self.state == "normal" else (.5,.5,.5,1))
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'img.jpg'
            angle_start: e1.value
            angle_end: e2.value


<SidePanel>:
    orientation: 'vertical'
    spacing: 5

    canvas:
        Color:
            rgba: (1,1,1,1)

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        canvas:
            Color:
                rgba: (0/255, 191/255, 255/255,1)

            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
        BoxLayout:
            orientation: 'horizontal'
            canvas:
                Color:
                    rgba: (0/255, 191/255, 255/255,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                Label:
                    background_color: (0.0, 0.0, 0.0, 0.0)
                    pos_hint: {'center_x': .8}
                    content_size:  root.width, None
                    canvas:
                        Color:
                            rgb: 1, 1, 1
                        Ellipse:
                            pos: self.pos
                            size: 60,60
