                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                spacing: 17
                canvas:
                    Color:
                        rgba: (0/255, 191/255, 255/255,1)

                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "Karim Khamiss"
                    font_size: 20
                    halign: 'left'
                    text_size: root.width, None
                    size: self.texture_size
                    pos_hint: {'center_x': .6}



                Label:
                    text: "Karim.Khamiss@yahoo.com"
                    font_size: 12
                    text_size: root.width, None
                    size: self.texture_size
                    pos_hint: {'center_x': .6}

            BoxLayout:


