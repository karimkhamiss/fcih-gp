#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<ResultScreen>:
    title: title_view
    first_list: first_list_view
    second_list: second_list_view
    third_list: third_list_view
    BoxLayout:
        orientation: 'vertical'
        spacing:20
        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        #logo
        BoxLayout:
            size_hint: 1, .1
            canvas:
                Color:
                    rgba: 0.2, 0.58, 0.992,1
                Rectangle:
                    pos: self.pos
                    size: self.size
#                    Button:
#				size_hint:[None,None]
#				pos_hint:{'center_x':.5}
#				height: 30
#				width:80
#				background_normal: ''
#				background_color: 0.2,0.58 , 1,1
#				font_size: 16
#				text: "Capture"
#				color: 1,1,1,1
            Button:
				size_hint:[None,None]
                height: 30
				width:80
				text: "Capture"
				font_size: 16
                size_hint: 1, 1
                background_normal: ''
                background_color: 0.2,0.58 , 1,1
                color: 1,1,1,1
                on_press:root.analysis()

        #title
        BoxLayout:
            orientation: 'vertical'
            padding:[20,0,20,0]
            spacing:25

            BoxLayout:
                size_hint: 1, .2
                orientation: 'vertical'
                Label:
                    text: "Analysis Result "
                    color :0, 0, 0,1
                    font_size:20
                    size_hint: 1, .5

                Label:
                    id:title_view
                    color :0.2, 0.58, 0.992,1
                    font_size:20
                    size_hint: 1, .5
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    size_hint: 1, .05
                    orientation: 'horizontal'
                    canvas:
                        Color:
                            rgba: 0.2, 0.58, 0.992,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: "Name"
                        background_normal:''
                        background_color:0.2, 0.58, 0.992,1
                        foreground_color:0.56,0.75,0.94
                        font_size:20
                        size_hint: .25, .5

                    Label:
                        text: "Result"
                        background_normal:''
                        background_color:0.2, 0.58, 0.992,1
                        foreground_color:0.56,0.75,0.94
                        font_size:20
                        size_hint: .25, .5

                    Label:
                        text: "Feedback"
                        background_normal:''
                        background_color:0.2, 0.58, 0.992,1
                        foreground_color:0.56,0.75,0.94
                        font_size:20
                        size_hint: .5, .5
                BoxLayout:
                    size_hint: 1, .5
                    orientation:'horizontal'
                    background_normal:''
                    background_color:1,1,1,1
                    color :0.2, 0.58, 0.992,1


                    ListView:
                        size_hint: .25, 1
                        id: first_list_view
                        color :0.2, 0.58, 0.992,1
                        adapter:
                            ListAdapter(data=["Karim"], cls=main.StudentListButton)
                    ListView:
                        id: second_list_view
                        size_hint: .25, 1
                        adapter:
                            ListAdapter(data=[], cls=main.StudentListButton)
                    ListView:
                        id: third_list_view
                        size_hint: .5, 1
                        adapter:
                            ListAdapter(data=[], cls=main.StudentListButton)

