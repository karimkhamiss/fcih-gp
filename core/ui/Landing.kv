<Box>:
	canvas.before:
        Color:
            rgba: .98,.98,.98, 1
        Rectangle:
            pos: self.pos
            size: self.size
			
	orientation: 'vertical'
	padding: [15,15,15,15]

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: .2
		pos_hint:{'y':.5}
		BoxLayout:
			orientation: 'vertical'
			pos_hint:{'x':.5}
			Image:
				source:'..\..\\resources\\ui\\doctor.png'
				size_hint:[1,1]

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: .35
		padding:[20,15,15,15]

		Label:
			text_size: root.width-40, None
			pos_hint:{'y':0}
			size: self.texture_size
			font_size: 16
			text: "Description will appear here, Hand writing recognition is the ability of  computer to take as input hand writing from source, such as printed physical documents, pics and other devices. It also can use hand writing as a direct input to a touch screen and then interpret it as text. Description will end now after these words."
			color: .45,.45,.45,1

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: .2
		spacing:20
		padding:[8,30,8,30]

		Button:
			size_hint:[1,None]
			height: 32
			pos_hint:{'y':.8}
			background_normal: ''
			background_color: 0.2,0.58 , 1,1
			font_size: 16
			text: "SIGN UP"
			color: 1,1,1,1

		Button:
			size_hint:[1,None]
			height: 32
			pos_hint:{'y':.8}
			background_normal: ''
			background_color: 0.2,0.58 , 1,1
			font_size: 16
			text: "SIGN IN"
			color: 1,1,1,1