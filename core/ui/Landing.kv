<LandingScreen>:
    name:"landing"
    BoxLayout:
        orientation: 'vertical'
        padding: [15,15,15,15]
        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .23
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1
                pos_hint:{'y':-.2}
                Image:
                    source:'..\..\\resources\\ui\\logo.png'
                    size_hint:[1,1]

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .32
            padding:[20,15,15,15]

            Label:
                text_size: root.width-40, None
                pos_hint:{'y':0}
                size: self.texture_size
                font_size: 15
                text: "Welcome to Medical Tests Reader. \nWe are super excited to help you understand  Medical Test results, provide a feedback from Test results And save your Medical history. \nKnowing that we does not replace doctor's expertise, we aim to support people that have not enough knowledge to understand Medical tests."
                color: .45,.45,.45,1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2
            spacing:20
            padding:[8,30,8,30]

            Button:
                size_hint:[1,None]
                height: 32
                pos_hint:{'y':.6}
                background_normal: ''
                background_color: 0.2,0.58 , 1,1
                font_size: 16
                text: "SIGN UP"
                color: 1,1,1,1
                on_release:app.root.current = "signup"

            Button:
                size_hint:[1,None]
                height: 32
                pos_hint:{'y':.6}
                background_normal: ''
                background_color: 0.2,0.58 , 1,1
                font_size: 16
                text: "SIGN IN"
                color: 1,1,1,1
                on_release:app.root.current = "login"
