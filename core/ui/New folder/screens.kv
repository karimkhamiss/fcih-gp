#: import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    BoxLayout:
        orientation: 'vertical'

        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        BoxLayout: #layout for logo
            size_hint: 1,.3
            Label:
                text:'Logo is here'
                color :0.2, 0.58, 0.992,1
                font_size:30
               # pos_hint: {'x': .1, 'y': .2}
        FloatLayout:
            size_hint: 1,.7
            background_normal:''
            background_color:0,0,0,1
            TextInput:
                text: "User Name"
                pos_hint: {"x": 0.25, "top": 1}
                size_hint: .5, .1
                background_normal:''
                background_color:1, 1, 1,1

            TextInput:
                text: "Password"
                pos_hint: {"x": 0.25, "top": .8}
                size_hint: .5, .1
                background_normal:''
                background_color:1, 1, 1,1


            Button:
                text: "Sign in"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: .3, .1
                background_normal:''
                background_color:0.2, 0.58, 0.992,1

            Button:

                size_hint: 1, .1
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
                foreground_color:0.56,0.75,0.94
                text: "Don't have account"
                pos_hint: {"left": 1, "bottom": 0}
    AnotherScreen:
    BoxLayout:
        orientation: 'vertical'
        spacing:20
        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        #logo
        BoxLayout:
            size_hint: 1, .1
            canvas:
                Color:
                    rgba: 0.2, 0.58, 0.992,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                foreground_color:0.56,0.75,0.94
                text: "logo "
                font_size:30
                size_hint: 1, 1

        #title
        BoxLayout:
            orientation: 'vertical'
            padding:[20,0,20,0]
            spacing:25
            BoxLayout:
                size_hint: 1, .2
                orientation: 'vertical'
                Label:
                    text: "Analysis Result "
                    color :0, 0, 0,1
                    font_size:20
                    size_hint: 1, .5

                Label:
                    text: "Complete blood picture"
                    color :0.2, 0.58, 0.992,1
                    font_size:20
                    size_hint: 1, .5
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    size_hint: 1, .05
                    orientation: 'horizontal'
                    canvas:
                        Color:
                            rgba: 0.2, 0.58, 0.992,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: "Name"
                        background_normal:''
                        background_color:0.2, 0.58, 0.992,1
                        foreground_color:0.56,0.75,0.94
                        font_size:20
                        size_hint: .25, .5

                    Label:
                        text: "Result"
                        background_normal:''
                        background_color:0.2, 0.58, 0.992,1
                        foreground_color:0.56,0.75,0.94
                        font_size:20
                        size_hint: .25, .5

                    Label:
                        text: "Feedback"
                        background_normal:''
                        background_color:0.2, 0.58, 0.992,1
                        foreground_color:0.56,0.75,0.94
                        font_size:20
                        size_hint: .5, .5
                BoxLayout:
                    size_hint: 1, .5
                    orientation:'horizontal'
                    background_normal:''
                    background_color:0.2, 0.58, 0.992,1
                    foreground_color:0.56,0.75,0.94


                    ListView:
                        size_hint: .25, 1
                        id: students_list_view
                        adapter:
                            ListAdapter(data=[], cls=main.StudentListButton)
                    ListView:
                        id: students_list_view
                        size_hint: .25, 1
                        adapter:
                            ListAdapter(data=[], cls=main.StudentListButton)
                    ListView:
                        id: students_list_view
                        size_hint: .5, 1
                        adapter:
                            ListAdapter(data=["very good your health is well","very good your health is well","very good your health is well","very good your health is well","very good your health is well","very good your health is well","very good your health is well","very good your health is well"], cls=main.StudentListButton)

            Label:
                text:'Unlike many other toolkits, Each child is automatically assigned a position determined by the layout configuration and the childâ€™s index in the children list.'
                text_size: root.width-100, None
                color :0, 0, 0,1
                font_size:20
                size_hint: 1, .3



        Button:
            size_hint: 1, .1
            background_normal:''
            background_color:0.2, 0.58, 0.992,1
            foreground_color:0.56,0.75,0.94
            text: "Capture another one ?"
            font_size:30
            pos_hint: {"left": 0, "bottom": 0}

<MainScreen>:
    name:"main"
    Button:
        on_release:app.root.current = "other"
        text:"Next"
<AnotherScreen>:
    name:"other"
    Button:
        on_release:app.root.current = "main"
        text:"Pre"