<CameraScreen>:
    name:'camera'
    orientation: 'vertical'
    Camera:
        id: camera
        resolution: (640, 480)
        play: False
    Button:
        text: 'Capture'
        size_hint_y: None
        height: '30'
        background_normal: ''
        background_color: 0.2,0.58 , 1,1
        on_press: root.capture()