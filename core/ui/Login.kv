<LoginScreen>:
    name:"login"
    username_text_input: username
    password_text_input: password
    BoxLayout:
        orientation: 'vertical'

        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            padding: [15,0,5,0]
            size_hint:[None,None]
            width: root.width
            height:35
            canvas.before:
                Color:
                    rgba: .2,.58,1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'y':.2}
                Label:
                    text_size: None, None
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    size: self.texture_size
                    font_size: 17
                    text: "Medical Tests Reader"
                    color: 1,1,1, 1
                    bold:True

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.3
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1
                pos_hint:{'y':-.2}
                Image:
                    source:'..\..\\resources\\ui\\logo.png'
                    size_hint:[1,1]
        FloatLayout:
            size_hint: 1,.7
            background_normal:''
            background_color:0,0,0,1

            TextInput:
                id:username
                hint_text: "Username"
                # text:"osama"
                font_size: 13
                pos_hint: {"center_x": 0.5, "top": .9}
                size_hint:[.7,None]
                height: 32
                background_normal:''
                background_color:1, 1, 1,1

            TextInput:
                id:password
                hint_text: "Password"
                # text:"0000"
                font_size: 13
                password:True
                pos_hint: {"center_x": 0.5, "top": .75}
                size_hint:[.7,None]
                height: 32
                background_normal:''
                background_color:1, 1, 1,1
            Button:
                text: "Sign in"
                pos_hint: {"center_x": .5, "top": .58}
                size_hint:[.7,None]
                height: 32
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
                on_release:root.login()

            Button:
                text: "Don't have account?"
                pos_hint: {"center_x": .5, "top": 0.46}
                size_hint:[.7,None]
                height: 32
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
                foreground_color:0.56,0.75,0.94
                on_release:app.root.current = "signup"