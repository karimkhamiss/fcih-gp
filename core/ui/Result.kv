#:kivy 1.10.0

BoxLayout:
    orientation: 'vertical'

    canvas:
        Color:
            rgb: .98, .98, .98,1
        Rectangle:
            size: self.size

    BoxLayout: #layout for logo
        size_hint: 1,.3
        Label:
            text:'Logo is here'
            color :0.2, 0.58, 0.992,1
            font_size:30
           # pos_hint: {'x': .1, 'y': .2}
    FloatLayout:
        size_hint: 1,.7
        background_normal:''
        background_color:0,0,0,1
        TextInput:
            text: "User Name"
            pos_hint: {"x": 0.25, "top": 1}
            size_hint: .5, .1
            background_normal:''
            background_color:1, 1, 1,1

        TextInput:
            text: "Password"
            pos_hint: {"x": 0.25, "top": .8}
            size_hint: .5, .1
            background_normal:''
            background_color:1, 1, 1,1


        Button:
            text: "Sign in"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .3, .1
            background_normal:''
            background_color:0.2, 0.58, 0.992,1

        Button:

            size_hint: 1, .1
            background_normal:''
            background_color:0.2, 0.58, 0.992,1
            foreground_color:0.56,0.75,0.94
            text: "Don't have account"
            pos_hint: {"left": 1, "bottom": 0}