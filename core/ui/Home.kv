<HomeScreen>:
    username: username_label
    name:"home"
    BoxLayout:
        canvas.before:
            Color:
                rgba: .98,.98,.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        padding: [0,0,0,0]

        BoxLayout:
            orientation: 'horizontal'
            padding: [15,0,5,0]
            size_hint:[None,None]
            width: root.width
            height:35
            canvas.before:
                Color:
                    rgba: .2,.58,1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'y':.2}
                Label:
                    text_size: None, None
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    size: self.texture_size
                    font_size: 17
                    text: "Medical Tests Reader"
                    color: 1,1,1, 1
                    bold:True

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            width: root.width
            height:root.height/12

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'center_y':.5}
                Image:
                    source:'..\..\\resources\\ui\\profile.png'
                    size_hint:[None,.9]
                    pos_hint:{'center_x':.5}
                    width:120


            Label:
                id:username_label
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: ""
                color: .2,.58,1, 1
            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "How are you today ?"
                color: .2,.58,1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .13
            padding:[20,0,20,0]

            Label:
                text_size: root.width-40, None
                font_size: 14
                text: "For the best result, Make sure to follow next instructions carefully. \nFollowing instructions helps us to provide an accurate result in short time.\nNote that generating result takes between 80 to 110 seconds.  "
                color: .45,.45,.45,1

        BoxLayout:
            orientation: 'vertical'
            size_hint:[None,None]
            width: root.width
            height:root.height/12

            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "Check your medical tests results?"
                color: .2,.58,1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint:[None,None]
            width: root.width
            height:root.height/5

            BoxLayout:
                orientation: 'vertical'
                size_hint:[None,None]
                width: root.width
                pos_hint:{'center_y':1.15}

                Button:
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    height: 30
                    width:80
                    background_normal: ''
                    background_color: 0.2,0.58 , 1,1
                    font_size: 16
                    text: "Capture"
                    color: 1,1,1,1
                    on_release:app.root.current = "HowToCrop"
        BoxLayout:
            orientation: 'vertical'
            padding: [0,0,0,0]
            size_hint:[None,None]
            width: root.width
            height:45
            canvas.before:
                Color:
                    rgba: 0.2,0.58 , 1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            #icons
            BoxLayout:
                orientation: 'horizontal'
                size_hint:[None,.6]
                width: root.width
                pos_hint:{'center_x':.5}

                BoxLayout:
                    orientation: 'vertical'
                    size_hint:[1,1]
                    pos_hint:{'center_y':.4}
                    Button:
                        size_hint:[None,None]
                        pos_hint:{'center_x':.5}
                        height: 26
                        width:26
                        # on_release:app.root.current = "Home"
                        Image:
                            source: '..\..\\resources\\ui\\homes.png'
                            size_hint:[None,None]
                            size: self.parent.size
                            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            allow_stretch: True
                BoxLayout:
                    orientation: 'vertical'
                    size_hint:[1,1]
                    pos_hint:{'center_y':.4}
                    Button:
                        size_hint:[None,None]
                        pos_hint:{'center_x':.5}
                        height: 26
                        width:26
                        on_release:app.root.current = "medical"
                        Image:
                            source: '..\..\\resources\\ui\\medicalhistory.png'
                            size_hint:[None,None]
                            size: self.parent.size
                            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            allow_stretch: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint:[1,1]
                    pos_hint:{'center_y':.4}
                    Button:
                        size_hint:[None,None]
                        pos_hint:{'center_x':.5}
                        height: 26
                        width:26
                        on_release:app.root.current = "landing"
                        Image:
                            source: '..\..\\resources\\ui\\logout.png'
                            size_hint:[None,None]
                            size: self.parent.size
                            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                            x: self.parent.x
                            allow_stretch: True


            BoxLayout:
                orientation: 'horizontal'
                size_hint:[None,.4]
                width: root.width
                pos_hint:{'center_x':.5}
                BoxLayout:
                    orientation: 'vertical'
                    size_hint:[1,1]
                    pos_hint:{'center_y':.5}
                    Label:
                        text_size: None, None
                        size_hint:[None,None]
                        pos_hint:{'center_x':.5}
                        size: self.texture_size
                        font_size: 13
                        text: "Home"
                        color: .59,1,.59, 1

                BoxLayout:
                    orientation: 'vertical'
                    size_hint:[1,1]
                    pos_hint:{'center_y':.5}
                    Label:
                        text_size: None, None
                        size_hint:[None,None]
                        pos_hint:{'center_x':.5}
                        size: self.texture_size
                        font_size: 13
                        text: "Medical History"
                        color: 1,1,1, 1

                BoxLayout:
                    orientation: 'vertical'
                    size_hint:[1,1]
                    pos_hint:{'center_y':.5}
                    Label:
                        text_size: None, None
                        size_hint:[None,None]
                        pos_hint:{'center_x':.5}
                        size: self.texture_size
                        font_size: 13
                        text: "Logout"
                        color: 1,1,1, 1

