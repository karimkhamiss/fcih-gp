<HomeScreen>:
    name:"home"
    BoxLayout:
        canvas.before:
            Color:
                rgba: .98,.98,.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        padding: [0,0,0,0]

        BoxLayout:
            orientation: 'horizontal'
            padding: [15,0,5,0]
            size_hint:[None,None]
            width: root.width
            height:35
            canvas.before:
                Color:
                    rgba: .2,.58,1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                size_hint:[None,None]
                pos_hint:{'center_y':.5}
                height: 20
                width:20
#                Image:
#                    source: '..\..\\resources\\ui\\menu.png'
#                    size_hint:[None,None]
#                    size: self.parent.size
#                    y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
#                    x: self.parent.x
#                    allow_stretch: True
#                #on_release:app.root.current = ""

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'y':.2}
                Label:
                    text_size: None, None
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    size: self.texture_size
                    font_size: 17
                    text: "Medical Analysis"
                    color: 1,1,1, 1
                    bold:True

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            width: root.width
            height:root.height/12

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'center_y':.5}
                Image:
                    source:'..\..\\resources\\ui\\profile.png'
                    size_hint:[None,.9]
                    pos_hint:{'center_x':.5}
                    width:120

            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "How are you today ?"
                color: .2,.58,1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .13
            padding:[20,0,20,0]

            Label:
                text_size: root.width-40, None
                font_size: 14
                text: "Description will appear here. Hand writing recognition is the ability of the computer to take as input hand writing from source, Ex: such as printed physical docs, pics and other devices."
                color: .45,.45,.45,1

        BoxLayout:
            orientation: 'vertical'
            size_hint:[None,None]
            width: root.width
            height:root.height/12

            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "Check your analysis results?"
                color: .2,.58,1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint:[None,None]
            width: root.width
            height:root.height/5

            BoxLayout:
                orientation: 'vertical'
                size_hint:[None,None]
                width: root.width
                pos_hint:{'center_y':1.15}

                Button:
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    height: 30
                    width:80
                    background_normal: ''
                    background_color: 0.2,0.58 , 1,1
                    font_size: 16
                    text: "Capture"
                    color: 1,1,1,1
                    on_release:app.root.current = "HowToCrop"
