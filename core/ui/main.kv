#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
ScreenManagement:
    transition: FadeTransition()
    LandingScreen:
    LoginScreen:
    SignUpScreen:
    HomeScreen:
    ResultScreen:
<LandingScreen>:
    name:"landing"
    BoxLayout:
        orientation: 'vertical'
        padding: [15,15,15,15]
        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .23
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1
                pos_hint:{'y':-.2}
                Image:
                    source:'..\..\\resources\\ui\\logo.png'
                    size_hint:[1,1]

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .32
            padding:[20,15,15,15]

            Label:
                text_size: root.width-40, None
                pos_hint:{'y':0}
                size: self.texture_size
                font_size: 15
                text: "Description will appear here, Hand writing recognition is the ability of  computer to take as input hand writing from source, such as printed physical documents, pics and other devices. It also can use hand writing as a direct input to a touch screen and then interpret it as text. Description will end now after these words."
                color: .45,.45,.45,1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2
            spacing:20
            padding:[8,30,8,30]

            Button:
                size_hint:[1,None]
                height: 32
                pos_hint:{'y':.6}
                background_normal: ''
                background_color: 0.2,0.58 , 1,1
                font_size: 16
                text: "SIGN UP"
                color: 1,1,1,1
                on_release:app.root.current = "signup"

            Button:
                size_hint:[1,None]
                height: 32
                pos_hint:{'y':.6}
                background_normal: ''
                background_color: 0.2,0.58 , 1,1
                font_size: 16
                text: "SIGN IN"
                color: 1,1,1,1
                on_release:app.root.current = "login"
<LoginScreen>:
    name:"login"
    BoxLayout:
        orientation: 'vertical'

        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.3
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1
                pos_hint:{'y':-.2}
                Image:
                    source:'..\..\\resources\\ui\\logo.png'
                    size_hint:[1,1]
        FloatLayout:
            size_hint: 1,.7
            background_normal:''
            background_color:0,0,0,1

            TextInput:
                hint_text: "User Name"
                font_size: 13
                pos_hint: {"center_x": 0.5, "top": .9}
                size_hint:[.6,None]
                height: 32
                background_normal:''
                background_color:1, 1, 1,1

            TextInput:
                hint_text: "Password"
                font_size: 13
                password:True
                pos_hint: {"center_x": 0.5, "top": .7}
                size_hint:[.6,None]
                height: 32
                background_normal:''
                background_color:1, 1, 1,1


            Button:
                text: "Sign in"
                pos_hint: {"center_x": .5, "top": .5}
                size_hint:[.6,None]
                height: 32
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
                on_release:app.root.current = "home"

            Button:
                text: "Don't have account"
                pos_hint: {"center_x": .5, "center_y": 0.046}
                size_hint:[1,None]
                height: 32
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
                foreground_color:0.56,0.75,0.94
                on_release:app.root.current = "signup"
<CustLabel@Label>:
    color: 1, 0, 0, 1
<CusTxt@TextInput>:
    background_normal:''
    background_color:1, 1, 1,1
<SignUpScreen>:
    name:"signup"
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb: .98, .98, .98,1
            Rectangle:
                size:self.size
                pos: self.pos
        BoxLayout: #layout for logo
            size_hint: 1,.3
            Label:
                text:'Logo is here'
                color :0.2, 0.58, 0.992,1
                font_size:30
               # pos_hint: {'x': .1, 'y': .2}
        FloatLayout:
            size_hint: 1,.7
            background_normal:''
            background_color:0,0,0,1
            CusTxt:
                text: "First Name"
                pos_hint: {"x": 0.18, "top": 1}
                size_hint: .3, .09
            CusTxt:
                text: "Last Name"
                pos_hint: {"x": .52, "top": 1}
                size_hint: .3, .09
            CustLabel:
                text: "Gender"
                color: 0, 0, 0, 1
                pos_hint: {"x": 0.06, "top": .9}
                size_hint: .3, .09
            CheckBox:
                group: "gender"
                value: root.male
                pos_hint: {"x": 0.27, "top": .9}
                size_hint: .1, .09
            CustLabel:
                text: "Male"
                color: 0, 0, 0, 1
                pos_hint: {"x": 0.3, "top": .9}
                size_hint: .3, .09
            CheckBox:
                group: "gender"
                value: root.female
                pos_hint: {"x": 0.59, "top": .9}
                size_hint: .1, .09
            CustLabel:
                text: "Female"
                color: 0, 0, 0, 1
                pos_hint: {"x": 0.6, "top": .9}
                size_hint: .3, .09
            CusTxt:
                text: "Birthdate"
                pos_hint: {"x": .18, "top": .8}
                size_hint: .64, .09
            CusTxt:
                text: "Email"
                pos_hint: {"x": 0.18, "top": .7}
                size_hint: .64, .1

            CusTxt:
                text: "Password"
                pos_hint: {"x": 0.18, "top": .59}
                size_hint: .64, .1
            Button:
                text: "Sign Up"
                pos_hint: {"center_x": .5, "center_y": .4}
                size_hint: .3, .1
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
            Button:
                size_hint: 1, .1
                background_normal:''
                background_color:0.2, 0.58, 0.992,1
                foreground_color:0.56,0.75,0.94
                text: "Already have account"
                pos_hint: {"left": 1, "bottom": 0}
                on_release:app.root.current = "login"
<HomeScreen>:
    name:"home"
    BoxLayout:
        canvas.before:
            Color:
                rgba: .98,.98,.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        padding: [0,0,0,0]

        BoxLayout:
            orientation: 'horizontal'
            padding: [15,0,5,0]
            size_hint:[None,None]
            width: root.width
            height:35
            canvas.before:
                Color:
                    rgba: .2,.58,1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                size_hint:[None,None]
                pos_hint:{'center_y':.5}
                height: 20
                width:20
                Image:
                    source: '..\..\\resources\\ui\\menu.png'
                    size_hint:[None,None]
                    size: self.parent.size
                    y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
                    x: self.parent.x
                    allow_stretch: True

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'y':.2}
                Label:
                    text_size: None, None
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    size: self.texture_size
                    font_size: 17
                    text: "Medical Analysis"
                    color: 1,1,1, 1
                    bold:True

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            width: root.width
            height:root.height/12

            BoxLayout:
                orientation: 'vertical'
                pos_hint:{'center_y':.5}
                Image:
                    source:'..\..\\resources\\ui\\profile.png'
                    size_hint:[None,.9]
                    pos_hint:{'center_x':.5}
                    width:120


            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "Welcome, Muhammed Osama"
                color: .2,.58,1, 1
            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "How are you today ?"
                color: .2,.58,1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .13
            padding:[20,0,20,0]

            Label:
                text_size: root.width-40, None
                font_size: 14
                text: "Description will appear here. Hand writing recognition is the ability of the computer to take as input hand writing from source, Ex: such as printed physical docs, pics and other devices."
                color: .45,.45,.45,1

        BoxLayout:
            orientation: 'vertical'
            size_hint:[None,None]
            width: root.width
            height:root.height/12

            Label:
                text_size: None, None
                size_hint:[None,None]
                pos_hint:{'center_x':.5}
                size: self.texture_size
                font_size: 15
                text: "Check your analysis results?"
                color: .2,.58,1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint:[None,None]
            width: root.width
            height:root.height/5

            BoxLayout:
                orientation: 'vertical'
                size_hint:[None,None]
                width: root.width
                pos_hint:{'center_y':1.15}

                Button:
                    size_hint:[None,None]
                    pos_hint:{'center_x':.5}
                    height: 30
                    width:80
                    background_normal: ''
                    background_color: 0.2,0.58 , 1,1
                    font_size: 16
                    text: "Capture"
                    color: 1,1,1,1
                    on_release:app.root.current = "result"
